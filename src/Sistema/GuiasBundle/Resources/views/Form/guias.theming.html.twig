{# El nombre del widget es el que devuelve el m√©todo getName() del form #}
{% block sistema_guiasbundle_guia_widget %}
{% import "SistemaGuiasBundle:Form:macro.categoria.html.twig" as macrosTelefono %}
{% form_theme form 'MWSimpleAdminCrudBundle:widget:fields.html.twig' %}
<div class="input-group"> 
    <div class="span6">
        {{ form_row(form.fecha) }}
    </div>

    <div class="span6">
        {{ form_row(form.solamarca) }}
    </div>
    <div class="span6">
        {{ form_row(form.persona) }}
    </div>
    <div class="span6">
        {{ form_row(form.finalidad) }}
    </div>
    <div class="span6">
        {{ form_row(form.campo) }}
    </div>
</div>
<div class="row-fluid">
    {{ form_label(form.guiacategorias) }}
    {{ form_errors(form.guiacategorias) }}
    <div data-prototype="{{ macrosTelefono.categorias(form.guiacategorias.vars.prototype)|e }}" class="row-fluid telefonos">
        {% for categoria in form.guiacategorias %}
            {{ macrosTelefono.categorias(categoria) }}
        {% endfor %}
    </div>
    <a href='#' class='btn add-telefono-form'>
        <i class='glyphicon glyphicon-plus'></i> Agregar Categoria
    </a>
</div>
<div class="i">
    <div class="span3">
        {{ form_row(form.save) }}
    </div>
    <div class="span3">
        {{ form_row(form.saveAndAdd) }}
    </div>
</div>
{{ form_row(form._token) }}
{% endblock %}
