<pdf>
    <dynamic-page margin="10" page-size="legal">
        <div margin-left="6.5px">
                <h1 font-style="normal" font-size="29px" margin-bottom="0" text-align="center">
                      GUIA DE TRASLADO ANIMAL
                </h1>
            <h2 font-style="normal"  text-align="center">
                Provincia del Chaco
            </h2>
        </div>
        <div >
            <stylesheet>
                <complex-attribute name="border" color="black" />
            </stylesheet>
            <div float="right">
                Fecha: {{ entity.fecha|date("d/m/Y") }} <br></br>
                Finalidad: {{ entity.finalidad }}
            </div>
            <div>
                
                 <h1 font-style="normal" font-size="16px" margin-bottom="0" text-align="left">
                     DATOS DEL ORIGEN
                 </h1>
                  <h1 font-style="normal" font-size="12px" margin-bottom="0" text-align="left">
                     Nombre: {{ entity.persona }}<br></br>
                     C.U.I.T.: {{ entity.persona.cuit }}<br></br>
                     Domicilio: {{ entity.persona.domicilio }}<br></br>
                 </h1>
            </div>
            <div>
                 <h1 font-style="normal" font-size="16px" margin-bottom="0" text-align="left">
                     DATOS DEL DESTINO
                 </h1>
                  <h1 font-style="normal" font-size="12px" margin-bottom="0" text-align="left">
                     Destino: {{ entity.campo }} <br></br> 
                     Domicilio: {{ entity.campo.localidad }} - {{ entity.campo.localidad.provincia }}<br></br>

                  </h1>
                     
            </div>
        </div> 
                 <div>
                     <br></br>
                 </div>
        <div >       
            <table>
               <tr >
                    <td>
                        <div font-style="normal"  font-size="12px" text-align="center">
                            Codigo
                        </div>
                    </td>
                    <td>
                        <div font-style="normal"  font-size="12px" text-align="center">
                            Categoria
                        </div>
                    </td>
                    <td>
                        <div font-style="normal"  font-size="12px" text-align="center">
                            Cantidad
                        </div>
                    </td>
               </tr>
               {% for guiacategoria in entity.guiacategorias %}
                <tr>
                    <td>
                        <div font-style="normal"  text-align="center">
                            {{ guiacategoria.categoria.codigo }}
                        </div>
                    </td>
                    <td>
                        <div font-style="normal"  text-align="center">
                            {{ guiacategoria.categoria }}
                        </div>
                    </td>
                    <td>
                        <div font-style="normal"  text-align="center">
                           {{ guiacategoria.cantidad }}
                        </div>
                    </td>
                </tr>
                {% endfor %}
                <tr>
                    <td>
                        <div>
                        </div>
                    </td>
                    <td colspan="2">
                        <div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
           
        
    </dynamic-page>
</pdf>
